@model TicketVerkoop.ViewModels.MatchVM


<div class="row" id="matchInfoBar">
    <div class="col-md-2">
        <p>Datum</p>
    </div>

    <div class="col-md-2">
        <p>Stadium</p>
    </div>

    <div class="col-md-1">
       <p>Thuis ploeg</p>
    </div>

    <div class="col-md-4">
        <p class="centered-text">Match</p>
    </div>

    <div class="col-md-1">
       <p>Uit ploeg</p>    
   </div>

    <div class="col-md-2">
        <p class ="centered-text">Tickets</p>
    </div>
</div>

<div class="row">



    <div class="col-md-2 stadium-match-ticket-content">
        <div>
            <p class="date">@Html.DisplayFor(model => model.Datum)</p>
            <p class="date">@Html.DisplayFor(model => model.DayOfWeek)</p>
            <p class="date">@Html.DisplayFor(model => model.Time)</p>
        </div>
    </div>

   <div class="col-md-2 stadium-match-ticket-content">
        <div id="stadiumCOL">
            <p>@Html.DisplayFor(model => model.StadiumNaam)</p>
            <a asp-area="" asp-controller="Stadium" asp-action="Index"
               asp-route-stadiumID="@Model.StadiumId">
                More about stadium
            </a>
        </div>
   </div>
    
    <div class="col-md-1">
        <img id="tshirt-logo" src="/images/t-shirt-logo.jpg" />
    </div>

    <div class="col-md-4 stadium-match-ticket-content centered-horizontaly">
        <span>@Html.DisplayFor(model => model.ThuisPloegNaam)</span>
        <span>  <img id="ball-logo" src="/images/ball-logo.jpg" /> </span>
        <span> @Html.DisplayFor(model => model.UitPloegNaam)</span>
    </div>

    <div class="col-md-1">
        <img id="tshirt-logo" src="/images/t-shirt-logo.jpg" />
    </div>


    <div class="col-md-2 stadium-match-ticket-content centered-horizontaly">

        @if (Model.DateTime < DateTime.Now)
        {
            <p class="centered-text">Match is al verlopen</p>
        }

        @if (Model.DateTime > DateTime.Now.AddDays(30))
        {
            <p class="centered-text">1 maand voor wedstrijd</p>
        }

        @if (Model.DateTime < DateTime.Now.AddDays(30) && Model.DateTime > DateTime.Now)
        {
            <a class="buytTickets" asp-area="" asp-controller="TicketSelection" asp-action="TicketSelection"
                   asp-route-matchID="@Model.MatchId" asp-route-ThuisPloegNaam="@Model.ThuisPloegNaam">
                    Buy Tickets
            </a>
        }

    </div>

</div>